<%- include("partials/header") -%>

<h1><%= pageTitle %></h1>
<form class="form" action="<%= formAction %>" method="post">
  <div class="form-group">
    <label for="postTitle">Title</label>
    <input
      class="form-control"
      type="text"
      name="postTitle"
      id="postTitle"
      value="<%= titleInputValue %>"
      required
      maxlength="50"
    />
  </div>
  <div class="form-group">
    <label for="postContent">Post</label>
    <textarea
      class="form-control"
      name="postContent"
      id="postContent"
      rows="6"
      cols="40"
      maxlength="500"
    >
<%= contentInputValue %></textarea
    >
  </div>
  <button class="btn" type="submit" name="button" value="<%= buttonValue %>">
    Publish
  </button>
  <a href="/maintenance"
    ><button class="btn" type="button">Back to Maintenance</button></a
  >
</form>

<%- include("partials/footer") -%>
